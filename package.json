{
  "name": "accoutrement",
  "title": "Accoutrement",
  "version": "3.0.1",
  "description": "Sass design-systems management and utilities.",
  "homepage": "https://www.oddbird.net/accoutrement/",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/accoutrement.git"
  },
  "author": "Miriam Suzanne <miriam@oddbird.net>",
  "license": "MIT",
  "keywords": [
    "sass",
    "accoutrement",
    "toolkit",
    "design systems",
    "eyeglass-module"
  ],
  "eyeglass": {
    "sassDir": "sass",
    "exports": false,
    "name": "accoutrement",
    "needs": "^1.0.0"
  },
  "scripts": {
    "test": "mocha",
    "lint:sass": "yarn lint:nofix --fix",
    "lint:nofix": "stylelint '**/*.scss'",
    "lint:other": "prettier --write '**/*.{json,md,yml}'",
    "lint": "run-p lint:sass lint:other",
    "docs": "sassdoc 'sass/**/*.scss'",
    "commit": "run-s lint test docs",
    "watch:sass": "chokidar '**/*.scss' '**/.stylelintrc.yml' -c 'yarn lint:nofix'",
    "watch:tests": "chokidar 'test/**' -c 'yarn test'",
    "watch:docs": "chokidar 'sass/**/*.scss' './.sassdocrc' -c 'yarn docs'",
    "watch": "run-p watch:sass watch:tests watch:docs"
  },
  "bugs": {
    "url": "https://github.com/oddbird/accoutrement/issues"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "prettier": "^2.5.0",
    "sass": "^1.44.0",
    "sass-true": "^6.0.1",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0"
  }
}
